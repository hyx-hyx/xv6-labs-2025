{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "xv6debug-user",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/user/_${fileBasenameNoExtension}",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/usr/bin/gdb-multiarch",
            "miDebuggerArgs": "-q -ex \"set architecture riscv:rv64\" -ex \"file user/_${fileBasenameNoExtension}\"",
            "MIMode": "gdb",
            "externalConsole": false,
            "avoidWindowsConsoleRedirection": false,
            "logging": {
                "exceptions": false,
                "programOutput": false,
                "engineLogging": false,
                "moduleLoad": false,
                "trace": false
            }
        }
    ]
}